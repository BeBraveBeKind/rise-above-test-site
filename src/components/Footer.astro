---
// src/components/Footer.astro
import site from '../data/site.json';
const currentYear = new Date().getFullYear();
---

<footer class="bg-lightGray py-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div class="col-span-1 md:col-span-1">
        <a href="/" class="inline-block mb-4">
          <img src={site.logo} alt={site.siteName + ' Logo'} class="h-10 w-auto" />
        </a>
        <p class="text-sm text-mediumGray mb-4">
          Rise Above Partners specializes in crafting strategic marketing initiatives for niche industries, elevating your professional web presence with targeted digital strategies.
        </p>
        <div class="flex gap-4 mt-4">
          <!-- Social Links - Add your social media icons here -->
          <a 
            href="#" 
            target="_blank" 
            rel="noopener noreferrer" 
            aria-label="LinkedIn"
            class="text-dark hover:text-brandBlue transition-colors"
          >
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Quick Links -->
      <div class="col-span-1 md:col-span-1">
        <h3 class="font-semibold text-lg mb-4">Quick Links</h3>
        <nav class="flex flex-col gap-2">
          {site.navigation.map((item) => (
            <a 
              href={item.href} 
              class="text-dark hover:text-brandBlue transition-colors text-sm"
            >
              {item.label}
            </a>
          ))}
        </nav>
      </div>
      
      <!-- Legal Links -->
      <div class="col-span-1 md:col-span-1">
        <h3 class="font-semibold text-lg mb-4">Legal</h3>
        <nav class="flex flex-col gap-2">
          {site.footerLinks.filter(link => link.enabled).map(link => (
            <a 
              href={link.href} 
              class="text-dark hover:text-brandBlue transition-colors text-sm"
            >
              {link.label}
            </a>
          ))}
        </nav>
      </div>
      
      <!-- Newsletter Signup -->
      <div class="col-span-1 md:col-span-1">
        <h3 class="font-semibold text-lg mb-4">Stay Updated</h3>
        <p class="text-sm text-mediumGray mb-4">
          Subscribe to our newsletter for the latest marketing insights and strategies.
        </p>
        <form class="mt-2">
          <div class="flex flex-col gap-2">
            <input 
              type="email" 
              placeholder="Your email address" 
              class="px-4 py-2 rounded-sm border border-mediumGray focus:border-brandBlue focus:outline-none"
              required
            />
            <button 
              type="submit"
              class="bg-brandBlue text-white py-2 px-4 rounded-sm hover:bg-opacity-90 transition-all transform hover:-translate-y-0.5 font-semibold"
            >
              Subscribe
            </button>
          </div>
        </form>
      </div>
    </div>
    
    <!-- Copyright -->
    <div class="border-t border-gray-200 mt-8 pt-8 text-center text-sm text-mediumGray">
      <p>&copy; {currentYear} {site.siteName}. All rights reserved.</p>
    </div>
  </div>
</footer>

<script>
  // Newsletter form submission
  const newsletterForm = document.querySelector('footer form');
  
  if (newsletterForm) {
    newsletterForm.addEventListener('submit', (e) => {
      e.preventDefault();
      
      // Get email input value
      const emailInput = newsletterForm.querySelector('input[type="email"]');
      const email = emailInput ? emailInput.value : '';
      
      if (email) {
        // Here you would typically send this to your newsletter service
        // For now, we'll just show an alert
        alert(`Thank you for subscribing with ${email}!`);
        
        // Reset the form
        newsletterForm.reset();
      }
    });
  }
</script>