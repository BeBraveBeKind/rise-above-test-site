---
// Import statements
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
// Add your other imports here

// Fix URL construction
const { title, description, image } = Astro.props;
const siteUrl = import.meta.env.SITE || 'https://riseabovepartners.com'; // Provide a default
const canonicalURL = new URL(Astro.url.pathname, siteUrl);
// If you were trying to create a URL using a potentially undefined value, check for it first:
// const someUrl = someValue ? new URL(someValue, siteUrl) : null;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    
    <title>{title}</title>
    <meta name="description" content={description} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Add your favicon and other meta tags here -->
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>